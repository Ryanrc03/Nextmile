# LangChain RAG Chatbot Dockerfile
FROM python:3.10-slim

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# 复制 requirements.txt
COPY chatbot/requirements.txt /app/requirements.txt

# 安装 Python 依赖
RUN pip install --no-cache-dir -r requirements.txt

# 复制应用代码
COPY chatbot/ /app/chatbot/
COPY RAG_algotirhm/rag_core/LangChainRag/ /app/RAG_algotirhm/rag_core/LangChainRag/

# 设置环境变量
ENV PYTHONPATH=/app:/app/chatbot:/app/RAG_algotirhm/rag_core/LangChainRag
ENV PYTHONUNBUFFERED=1

# 暴露端口
EXPOSE 8000

# 启动命令
CMD ["python", "/app/chatbot/api_server_langchain.py"]
